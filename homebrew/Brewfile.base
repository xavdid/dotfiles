# installations that happen on every mac I own
cask_args appdir: "/Applications"

# taps, expanding functionality
tap "homebrew/bundle"
tap "homebrew/cask"
tap "homebrew/core"
tap "homebrew/cask-drivers" # for wally
tap "homebrew/cask-fonts"

# general tools
brew "autojump"
brew "bat"
brew "coreutils" # includes gls, the GNU ls
brew "direnv"
brew "entr"
brew "gh"
brew "git"
brew "jq"
